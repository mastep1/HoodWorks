<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawer6"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Profil"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/l6_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tx6MainNapis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:text="@string/tx6Main"
                android:textAlignment="center"
                android:textColor="#131313"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img6Menu"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/menu" />

            <ImageView
                android:id="@+id/img6filter"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/filter" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:clickable="true"
                android:tint="#FF9800"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/ScrolView6"
                app:layout_constraintTop_toBottomOf="@+id/img6filter"
                app:srcCompat="@drawable/folating_button" />

            <ScrollView
                android:id="@+id/ScrolView6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="-1dp"
                app:layout_constraintBottom_toTopOf="@+id/l6ButtomMenu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tx6MainNapis">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/diver6Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="30dp"
                        android:background="#FA0000"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tx6Like" />

                    <ImageView
                        android:id="@+id/img6ZdjProf"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="35dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/boy" />

                    <TextView
                        android:id="@+id/tx6Imie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#070707"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/img6ZdjProf"
                        app:layout_constraintTop_toTopOf="@+id/img6ZdjProf" />


                    <RatingBar
                        android:id="@+id/ratingBar6"
                        style="@style/Widget.AppCompat.RatingBar.Indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:indeterminate="false"
                        android:progressTint="#FF5722"
                        android:rating="4"
                        app:layout_constraintStart_toEndOf="@+id/img6ZdjProf"
                        app:layout_constraintTop_toBottomOf="@+id/tx6Imie" />

                    <TextView
                        android:id="@+id/tx6Ukonczone1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="6"
                        android:textColor="#070707"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/divider6vertical1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/img6ZdjProf" />

                    <TextView
                        android:id="@+id/tx6Ukonczone2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="UkoÅ„czone"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="@+id/tx6Ukonczone1"
                        app:layout_constraintStart_toStartOf="@+id/tx6Ukonczone1"
                        app:layout_constraintTop_toBottomOf="@+id/tx6Ukonczone1" />

                    <TextView
                        android:id="@+id/tx6Dni1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21 dni"
                        android:textColor="#0B0B0B"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/divider6vertical1"
                        app:layout_constraintTop_toTopOf="@+id/tx6Ukonczone1" />

                    <TextView
                        android:id="@+id/tx6Dni2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Z justJobs"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="@+id/tx6Dni1"
                        app:layout_constraintStart_toStartOf="@+id/tx6Dni1"
                        app:layout_constraintTop_toBottomOf="@+id/tx6Dni1" />

                    <View
                        android:id="@+id/divider6vertical1"
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:background="#FA0000"
                        app:layout_constraintBottom_toBottomOf="@+id/tx6Dni2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tx6Dni1" />

                    <View
                        android:id="@+id/divider6Horizontal1"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="30dp"
                        android:background="#FA0000"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider6vertical1" />

                    <ImageView
                        android:id="@+id/img6Like"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintBottom_toBottomOf="@+id/tx6Like"
                        app:layout_constraintEnd_toStartOf="@+id/tx6Like"
                        app:layout_constraintTop_toTopOf="@+id/tx6Like"
                        app:srcCompat="@drawable/like" />

                    <ImageView
                        android:id="@+id/img6DisLike"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="15dp"
                        app:layout_constraintBottom_toBottomOf="@+id/tx6Like"
                        app:layout_constraintStart_toEndOf="@+id/divider6vertical1"
                        app:layout_constraintTop_toTopOf="@+id/tx6Like"
                        app:srcCompat="@drawable/dislike" />

                    <TextView
                        android:id="@+id/tx6Like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="15dp"
                        android:text="19"
                        android:textColor="#0C0C0C"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/divider6vertical1"
                        app:layout_constraintTop_toBottomOf="@+id/divider6Horizontal1" />

                    <TextView
                        android:id="@+id/tx6DisLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="2"
                        android:textColor="#000000"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/tx6Like"
                        app:layout_constraintStart_toEndOf="@+id/img6DisLike"
                        app:layout_constraintTop_toTopOf="@+id/tx6Like" />

                    <View
                        android:id="@+id/diver6Horizontal2"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="30dp"
                        android:background="#FA0000"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tx6Like" />

                    <TextView
                        android:id="@+id/tx6Opis1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="50dp"
                        android:text="Przedstawienie"
                        android:textColor="#191717"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/img6Like" />

                    <TextView
                        android:id="@+id/tx6Opis2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="40dp"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tx6Opis1" />

                    <View
                        android:id="@+id/diver6Horizontal3"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="30dp"
                        android:background="#FA0202"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tx6Opis2" />

                    <TextView
                        android:id="@+id/tx6Kontakt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="25dp"
                        android:text="Kontakt"
                        android:textColor="#050505"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/diver6Horizontal3" />

                    <ImageView
                        android:id="@+id/img6Email"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tx6Kontakt"
                        app:srcCompat="@drawable/poprawione" />

                    <ImageView
                        android:id="@+id/img6Tel"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/img6Email"
                        app:srcCompat="@drawable/poprawione" />

                    <ImageView
                        android:id="@+id/img6UserChat"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/img6Tel"
                        app:srcCompat="@drawable/poprawione" />

                    <TextView
                        android:id="@+id/tx6UserChat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="Napisz na JustJobs"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/img6UserChat"
                        app:layout_constraintTop_toTopOf="@+id/img6UserChat" />

                    <TextView
                        android:id="@+id/tx6Tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="606309379"
                        app:layout_constraintBottom_toBottomOf="@+id/img6Tel"
                        app:layout_constraintStart_toEndOf="@+id/img6Tel"
                        app:layout_constraintTop_toTopOf="@+id/img6Tel" />

                    <TextView
                        android:id="@+id/tx6Email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="krykubi@wp.pl"
                        app:layout_constraintBottom_toBottomOf="@+id/img6Email"
                        app:layout_constraintStart_toEndOf="@+id/img6Email"
                        app:layout_constraintTop_toTopOf="@+id/img6Email" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </ScrollView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/l6ButtomMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#BFFFFDFD"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/img6Chat"
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/transparent"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/img6Mapa"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/poprawione" />

                <ImageView
                    android:id="@+id/img6Mapa"
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/img6Profil"
                    app:layout_constraintStart_toEndOf="@+id/img6Chat"
                    app:srcCompat="@drawable/map" />

                <ImageView
                    android:id="@+id/img6Profil"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/img6Mapa"
                    app:srcCompat="@drawable/boy" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/menu6"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/main_menu">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>