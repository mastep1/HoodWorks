<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/l6Main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E6FFFFFF">

    <ImageView
        android:id="@+id/img6Profil"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/boy" />

    <TextView
        android:id="@+id/tx6Imie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Krystian Kubica"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/img6Profil"
        app:layout_constraintTop_toTopOf="@+id/img6Profil" />

    <RatingBar
        android:id="@+id/ratingBar6"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/img6Profil"
        app:layout_constraintTop_toBottomOf="@+id/tx6Imie" />

    <TextView
        android:id="@+id/tx6CzasTrawania"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="40dp"
        android:text="Czas trwania"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/tx6Lokalizacja"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img6Profil" />

    <ImageView
        android:id="@+id/img6Length"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/tx6CzasTrawania"
        app:layout_constraintTop_toBottomOf="@+id/tx6CzasTrawania"
        app:srcCompat="@drawable/boy" />

    <TextView
        android:id="@+id/tx6Length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="20 min"
        android:textColor="#FF9800"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@+id/img6Length"
        app:layout_constraintTop_toBottomOf="@+id/tx6CzasTrawania" />

    <TextView
        android:id="@+id/tx6Lokalizacja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:text="Lokalizacja"
        android:textColor="#040404"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tx6CzasTrawania"
        app:layout_constraintTop_toBottomOf="@+id/img6Profil" />

    <ImageView
        android:id="@+id/img6Lokalizacja"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toStartOf="@+id/tx6Lokalizacja"
        app:layout_constraintTop_toBottomOf="@+id/img6Profil"
        app:srcCompat="@drawable/map" />

    <TextView
        android:id="@+id/tx6Adres"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="żbiskowska 44 Piastów"
        android:textColor="#4CAF50"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/tx6Lokalizacja"
        app:layout_constraintStart_toStartOf="@+id/img6Lokalizacja"
        app:layout_constraintTop_toBottomOf="@+id/tx6Lokalizacja" />
</androidx.constraintlayout.widget.ConstraintLayout>